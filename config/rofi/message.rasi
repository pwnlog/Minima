/* CONFIRM DIALOG MESSAGE */

@import "colors.rasi"

// Colors
* {
	background-color:       @background;
	text-color:             @foreground;
	font:                   "Iosevka Nerd Font 12";
}

// Message window
window {
	width:                  320px;
	padding:                25px;
	border:                 0px 0px 0px 2px;
	border-radius:          0px;
	border-color:           @background-alt;
	location:               center;
	y-offset:               -2em;
}

// Entry
entry {
	expand:                 true;
	text-color:             @foreground;
}
